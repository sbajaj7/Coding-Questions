/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int widthOfBinaryTree(TreeNode root) {
        
        if(root == null)
            return 0;
        
        Deque<TreeNode> dq = new ArrayDeque<>();
        dq.add(root);
        
        int max = 0;
        
        while(!dq.isEmpty()){
            
            int count = dq.size();
            //System.out.println(count);
            max = Math.max(count,max);
            
            for(int i = 0;i<count;i++){
                TreeNode node = dq.poll();
                if(node.left != null)
                    dq.offer(node.left);
                else
                    dq.offer(new TreeNode(Integer.MIN_VALUE,null,null));
                
                if(node.right != null)
                    dq.offer(node.right);
                else
                    dq.offer(new TreeNode(Integer.MIN_VALUE,null,null));
            
            }
            
            while(!dq.isEmpty() && dq.peekFirst().val == Integer.MIN_VALUE){
                dq.poll();
            }
            
            while(!dq.isEmpty() && dq.peekLast().val == Integer.MIN_VALUE){
                dq.pollLast();
            }
        }
        return max;
    }
}
